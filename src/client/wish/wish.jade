div(id="deseo")
    .row
      div(class="small-12 medium-6 column")
        form(class="dropzone" id="aw" style="width: 400px; height: 300px;")
      div(class="small-12 medium-6 column")
        form(id="frm-wish" data-abide="ajax")
          div(data-abide-error class="alert callout" style="display: none;")
            p
              i(class="fi-alert")
                Se han producido errores en el formulario.
          p Descripcion:
            input(type="text" maxlength="60" id="description" name="description" placeholder="Ingresa el nombre del objeto" required data-invalid)
            spam(class="form-error")
              Debe especificar una descripcion!
          p Referencia:
            input(type="text" maxlength="60" id="reference" name="reference" placeholder="Ingresa la referencia del objeto" required data-invalid)
            spam(class="form-error")
              Debe especificar una referencia!
          p Precio:
            .input-group
              span(class="input-group-label") $
              input(type="number" id="price" name="price" class="input-group-field" placeholder="Ingresa un precio aproximado" required data-invalid)
            spam(class="form-error")
              Debe especificar un precio!

      div(class="small-12 columns text-center")
        p Categoria:
        .categories

      div(class="small-12 columns text-center")
        br
        br
        div(id="map-container" style="display: block; width: 100%; height: 350px; margin: 4em auto;")
          Mapa
        a#btn-save
        a#btn-mapa
        input(type="hidden" name="hdIdLocation" id="hdIdLocation" value="0")
        input(type="hidden" name="hdIdList" id="hdIdList" value="")
        input(type="hidden" name="hdIdCategory" id="hdIdCategory" value="0")

      div(class="small-12 columns text-right btn-save")
